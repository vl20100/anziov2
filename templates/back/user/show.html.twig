{% extends 'back/base_admin.html.twig' %}

{% block title %}{{ user.username }} - Administranzio{% endblock %}

{% block container %}
    <h1>{{ user.username }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_index') }}" class="btn"><span class="fal fa-arrow-left"></span> Retour à la liste</a>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn"><span class="fal fa-edit"></span> Modifier</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
