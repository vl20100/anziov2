{% extends 'base.html.twig' %}

{% block title %}Pizza{% endblock %}

{% block body %}
    <h1>Pizza</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ pizza.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}CreamBase{% endtrans %}</th>
                <td>{{ pizza.creamBase ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>{% trans %}TomatoBase{% endtrans %}</th>
                <td>{{ pizza.tomatoBase ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>{% trans %}TruffleBase{% endtrans %}</th>
                <td>{{ pizza.truffleBase ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Ingredients{% endtrans %}</th>
                <td>
                    <ul>
                        {% for ingredient in pizza.ingredients %}
                            <li>{{ ingredient.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>{% trans %}Prices{% endtrans %}</th>
                <td>
                    <ul>
                        {% for price in pizza.prices %}
                            <li>ø{{ price.size }} : {{ price.price | number_format(2, ',', ' ') }} € <a style="color:red;" href="{{ path('pizza_price_delete', {'id': pizza.id, 'priceId': price.id}) }}">Supprimer</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pizza_index') }}">back to list</a>

    <a href="{{ path('pizza_edit', {'id': pizza.id}) }}">edit</a>

    {{ include('admin/pizza/_delete_form.html.twig') }}
{% endblock %}
