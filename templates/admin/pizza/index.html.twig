{% extends 'base.html.twig' %}

{% block title %}Pizza index{% endblock %}

{% block body %}
    <h1>Pizza index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreamBase</th>
                <th>TomatoBase</th>
                <th>TruffleBase</th>
                <th>Ingredients</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pizza in pizzas %}
            <tr>
                <td>{{ pizza.id }}</td>
                <td>{{ pizza.name }}</td>
                <td>{{ pizza.creamBase ? 'Yes' : 'No' }}</td>
                <td>{{ pizza.tomatoBase ? 'Yes' : 'No' }}</td>
                <td>{{ pizza.truffleBase ? 'Yes' : 'No' }}</td>
                <td>
                    <ul>
                        {% for ingredient in pizza.ingredients %}
                            <li>{{ ingredient.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{% if pizza.active %}<span class="fal fa-check"></span>{% else %}<span class="fal fa-times"></span>{% endif %}</td>
                <td>
                    <a href="{{ path('pizza_show', {'id': pizza.id}) }}">show</a>
                    <a href="{{ path('pizza_edit', {'id': pizza.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pizza_new') }}">Create new</a>
{% endblock %}
