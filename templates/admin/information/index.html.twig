{% extends 'base.html.twig' %}

{% block title %}Information index{% endblock %}

{% block body %}
    <h1>Information index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Content</th>
                <th>Start</th>
                <th>End</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information in information %}
            <tr>
                <td>{{ information.id }}</td>
                <td>{{ information.description }}</td>
                <td>{{ information.content }}</td>
                <td>{{ information.start ? information.start|date('Y-m-d') : '' }}</td>
                <td>{{ information.end ? information.end|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('information_show', {'id': information.id}) }}">show</a>
                    <a href="{{ path('information_edit', {'id': information.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('information_new') }}">Create new</a>
{% endblock %}
