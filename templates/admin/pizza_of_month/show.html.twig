{% extends 'base.html.twig' %}

{% block title %}PizzaOfMonth{% endblock %}

{% block body %}
    <h1>PizzaOfMonth</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza_of_month.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pizza_of_month.name }}</td>
            </tr>
            <tr>
                <th>CreamBase</th>
                <td>{{ pizza_of_month.creamBase ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TomatoBase</th>
                <td>{{ pizza_of_month.tomatoBase ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ pizza_of_month.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Month</th>
                <td>{{ pizza_of_month.month }}</td>
            </tr>
            <tr>
                <th>Shop</th>
                <td>
                    {% set strShop = "" %}
                    {% for shop in pizza_of_month.shop %}
                        {% if strShop != "" %}
                            {% set strShop = strShop ~ ', ' %}
                        {% endif %}
                        {% set strShop = strShop ~ shop %}
                    {% endfor %}

                    {{ strShop }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pizza_of_month_index') }}">back to list</a>

    <a href="{{ path('pizza_of_month_edit', {'id': pizza_of_month.id}) }}">edit</a>

    {{ include('admin/pizza_of_month/_delete_form.html.twig') }}
{% endblock %}
